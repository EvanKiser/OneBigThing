{
  "name": "server",
  "version": "1.0.0",
  "description": "OneBigThing Back-end",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "server-install": "npm install",
    "start-local": "cross-env NODE_ENV=production node server",
    "start": "node server.js",
    "server": "cross-env NODE_ENV=development nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build-client": "npm install --prefix client && npm run build --prefix client"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "author": "Evan Kiser",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.3.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4"
  }
}
